<h2>My tasks</h2>

<ul class="list-inline">
  <% @tasks.each do |task| %>
    <li class="task-li">
      <% if task.completed == true %>
        <i class="fas fa-check-square"></i>
      <% else %>
         <i class="far fa-square"></i>
      <% end %>
      <p><%= link_to task.title, task_path(task) %></p>
    </li>
  <% end %>
</ul>

